#TODO: DEBUGGING should only be set basing on shell variables
env = Environment(CPPDEFINES={'DEBUGGING':None})
env.ParseConfig('python2.7-config --includes --libs --cflags')
env.SharedLibrary('lyricseek', source=['lyricseek.c'])
env.Program(target='lyricseek_test', source=['test.c'],
        LIBS=['lyricseek', 'python2.7'], LIBPATH='.')

